<style>
  /* Auth.css - Core authentication styling for CodeCollab */

  :root {
    --primary-color: #007aff;
    --primary-dark: #0056b3;
    --primary-light: #69a4ff;
    --secondary-color: #6c757d;
    --success-color: #28a745;
    --danger-color: #dc3545;
    --warning-color: #ffc107;
    --info-color: #17a2b8;
    --light-color: #f8f9fa;
    --dark-color: #343a40;
    --body-bg: #f8f9fa;
    --card-bg: #ffffff;
    --card-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    --text-color: #333333;
    --text-muted: #6c757d;
    --border-color: #dee2e6;
    --input-bg: #ffffff;
    --input-border: #ced4da;
    --input-focus-border: #80bdff;
    --input-focus-box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    --border-radius: 0.375rem;
    --transition-speed: 0.15s;
    --spacing-xs: 0.25rem;
    --spacing-sm: 0.5rem;
    --spacing-md: 1rem;
    --spacing-lg: 1.5rem;
    --spacing-xl: 3rem;
  }

  /* Dark mode theme variables */
  .dark-mode {
    --body-bg: #121212;
    --card-bg: #1e1e1e;
    --card-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    --text-color: #f8f9fa;
    --text-muted: #adb5bd;
    --border-color: #343a40;
    --input-bg: #2c2c2c;
    --input-border: #495057;
    --input-focus-border: #007bff;
    --input-focus-box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
  }

  /* Global styles */
  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
      Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
    background-color: var(--body-bg);
    color: var(--text-color);
    margin: 0;
    padding: 0;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  /* Authentication container */
  .auth-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding: var(--spacing-md);
  }

  /* Authentication card */
  .auth-card {
    background-color: var(--card-bg);
    border-radius: var(--border-radius);
    box-shadow: var(--card-shadow);
    padding: var(--spacing-xl);
    width: 100%;
    max-width: 400px;
    transition: all 0.3s ease;
  }

  .auth-card:hover {
    box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  /* Brand section */
  .auth-brand {
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }

  .auth-brand h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: var(--spacing-xs);
    color: var(--primary-color);
  }

  .auth-brand p {
    color: var(--text-muted);
    font-size: 0.95rem;
    margin: 0;
  }

  /* Form elements */
  .auth-form-group {
    margin-bottom: var(--spacing-lg);
    position: relative;
  }

  .auth-form-group label {
    display: block;
    margin-bottom: var(--spacing-xs);
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-color);
    transition: color 0.2s ease;
  }

  .auth-form-control {
    display: block;
    width: 100%;
    padding: 0.75rem;
    font-size: 1rem;
    background-color: var(--input-bg);
    color: var(--text-color);
    border: 1px solid var(--input-border);
    border-radius: var(--border-radius);
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    box-sizing: border-box;
  }

  .auth-form-control:focus {
    border-color: var(--input-focus-border);
    box-shadow: var(--input-focus-box-shadow);
    outline: 0;
  }

  .auth-form-control.error {
    border-color: var(--danger-color);
  }

  .auth-error-message {
    color: var(--danger-color);
    font-size: 0.85rem;
    margin-top: var(--spacing-xs);
  }

  .auth-success-message {
    color: var(--success-color);
    font-size: 0.85rem;
    margin-top: var(--spacing-xs);
  }

  .auth-help-text {
    color: var(--text-muted);
    font-size: 0.85rem;
    margin-top: var(--spacing-xs);
  }

  /* Buttons */
  .auth-btn {
    display: inline-block;
    font-weight: 500;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    user-select: none;
    border: 1px solid transparent;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    border-radius: var(--border-radius);
    transition: all 0.2s ease-in-out;
    cursor: pointer;
  }

  .auth-btn-primary {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
    color: white;
  }

  .auth-btn-primary:hover {
    background-color: var(--primary-dark);
    border-color: var(--primary-dark);
  }

  .auth-btn-primary:active {
    transform: translateY(1px);
  }

  .auth-btn-block {
    display: block;
    width: 100%;
  }

  /* Divider */
  .auth-divider {
    display: flex;
    align-items: center;
    text-align: center;
    margin: var(--spacing-lg) 0;
  }

  .auth-divider::before,
  .auth-divider::after {
    content: "";
    flex: 1;
    border-bottom: 1px solid var(--border-color);
  }

  .auth-divider span {
    padding: 0 var(--spacing-sm);
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  /* Social sign-in buttons */
  .auth-social-signin {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
  }

  .auth-social-signin .auth-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-sm);
    background-color: var(--light-color);
    border-color: var(--border-color);
    color: var(--text-color);
  }

  .auth-social-signin .auth-btn:hover {
    background-color: var(--border-color);
  }

  .auth-social-signin .auth-btn svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Checkbox */
  .auth-form-checkbox {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: var(--spacing-md);
  }

  .auth-form-checkbox input[type="checkbox"] {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }

  .auth-form-checkbox label {
    position: relative;
    margin-bottom: 0;
    cursor: pointer;
    font-size: 0.9rem;
    padding-left: 0.5rem;
    display: inline-block;
    color: var(--text-color);
  }

  .auth-form-checkbox label::before {
    content: "";
    position: absolute;
    left: -1.5rem;
    top: 0.1rem;
    width: 1rem;
    height: 1rem;
    border: 1px solid var(--input-border);
    border-radius: 3px;
    background-color: var(--input-bg);
    transition: all 0.2s ease;
  }

  .auth-form-checkbox input[type="checkbox"]:checked + label::before {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
  }

  .auth-form-checkbox input[type="checkbox"]:checked + label::after {
    content: "";
    position: absolute;
    left: -1.25rem;
    top: 0.4rem;
    width: 0.5rem;
    height: 0.25rem;
    border-left: 2px solid white;
    border-bottom: 2px solid white;
    transform: rotate(-45deg);
  }

  /* Footer */
  .auth-footer {
    text-align: center;
    margin-top: var(--spacing-lg);
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  .auth-footer a {
    color: var(--primary-color);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .auth-footer a:hover {
    color: var(--primary-dark);
    text-decoration: underline;
  }

  /* Responsive styles */
  @media (max-width: 480px) {
    .auth-card {
      padding: var(--spacing-lg);
    }

    .auth-brand h1 {
      font-size: 1.75rem;
    }

    .auth-form-control {
      padding: 0.6rem;
    }

    .auth-btn {
      padding: 0.6rem 0.8rem;
    }
  }
</style>
