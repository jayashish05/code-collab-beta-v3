    .terminal {
      flex: 1;
      background-color: rgba(15, 15, 20, 0.98);
      color: #f0f0f0;
      font-family: 'Consolas', 'Monaco', monospace;
      padding: 0.5rem;
      overflow-y: auto;
    }

    .terminal-input {
      display: flex;
      background-color: transparent;
