    /* Footer Section */
    .footer-section {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      height: 40px;
      background-color: rgba(25, 25, 35, 0.98);
      border-top: 1px solid rgba(70, 70, 90, 0.5);
